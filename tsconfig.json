{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "test/**/*", "scripts/**/*"]
}
